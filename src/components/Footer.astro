---
import { SITE_TITLE } from '../consts';
const today = new Date();
---

<footer>
	<div class="footer-content">
		<p>&copy; {today.getFullYear()} {SITE_TITLE}. All rights reserved.</p>
		<p class="footer-tagline">한식의 정갈한 맛과 이야기를 전합니다.</p>
	</div>
</footer>
<style>
	footer {
		padding: 3em 1em;
		background: rgb(var(--gray-light));
		border-top: 1px solid rgb(230, 230, 230);
		text-align: center;
		margin-top: 4em;
	}
	.footer-content {
		max-width: 960px;
		margin: 0 auto;
	}
	footer p {
		margin: 0.5em 0;
		color: rgb(var(--gray));
		font-size: 0.9em;
	}
	.footer-tagline {
		font-size: 0.85em;
		font-style: italic;
	}
</style>
